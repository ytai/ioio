#!/bin/bash

if test $# -lt 3; then
  echo "Usage: make-ioio-bundle dist-dir out config1 config2 ..."
  exit 1
fi

HEX2IOIO=tools/hex2ioio/hex2ioio
ZIP=zip
DISTDIR=$1
OUT=$2

configs=("$@")
configs=("${configs[@]:2}")

i=0
for config in "${configs[@]}"; do
  echo $config
  $HEX2IOIO $DISTDIR/$config/production/*production.hex /tmp/$config.ioio
  results[$((i++))]=/tmp/$config.ioio
done

$ZIP -j $OUT ${results[@]}

